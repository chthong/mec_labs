# BUILDER IMAGE
#---------------------------------------------------------------------

FROM python:3.10.10-alpine3.17 as builder

ENV TZ=Europe/Paris

RUN mkdir -p /usr/tmp

COPY . /usr/tmp/

COPY etc/configuration.yaml \
	 etc/rnis-descriptor.yaml \
	/usr/local/etc/

WORKDIR /usr/tmp/src/

RUN pip3 install . --no-cache-dir && \
	rm -rf /usr/tmp

CMD ["oai_rnis"]